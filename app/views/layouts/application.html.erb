<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= "#{yield(:title)} | #{t('site.title')}" %>
      <% else %>
        <%= t('site.title') %>
      <% end %>
</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path 'buddhalog_apple_icon.png' %>">
    <link rel="icon" type="image/png" sizes="192x192" href="<%= asset_path 'buddhalog_and_192_icon.png' %>">
    <link rel="icon" type="image/png" sizes="512x512" href="<%= asset_path 'buddhalog_and_512_icon.png' %>">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <link href="https://fonts.googleapis.com/css2?family=Shippori+Mincho+B1&display=swap" rel="stylesheet">
    <%= favicon_link_tag('buddhalog_favicon.ico') %>
  </head>

  <body class="flex flex-col min-h-screen bg-white">
    <%= render 'shared/header' %>

    <% if flash[:alert] %>
      <div class="bg-red-50 border-red-400 text-center text-red-800 font-medium border-red-200 py-2">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="bg-green-50 border-green-400 text-center text-green-800 font-medium border-green-200 py-2">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <main class="flex-1 w-full">
      <%= yield %>
    </main>

    <%= render 'shared/footer' %>
  </body>
</html>
