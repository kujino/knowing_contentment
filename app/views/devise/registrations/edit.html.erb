<% content_for(:title, t('.title')) %>
<div class="bg-[#F4F4F4] min-h-screen px-5 md:px-0 max-w-[480px] md:max-w-7xl">
  <div class="font-semibold text-xl text-center text-[#2F3A4A] pt-10">
    <%= t('.title') %>
  </div>

  <div class="max-w-lg mx-auto mt-5 bg-white p-6 rounded-md shadow">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/error_messages", object: resource %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, t('.name'), class: "text-[#2F3A4A] font-medium" %>
          <%= f.text_field :name, class: "w-full mt-1 px-3 py-1 border border-gray-300 rounded-md", autofocus: true, placeholder: "釈迦 太郎" %>
        </div>

        <div>
          <%= f.label :email, t('.email'), class: "text-[#2F3A4A] font-medium" %>
          <%= f.email_field :email, class: "w-full mt-1 px-3 py-1 border border-gray-300 rounded-md", autocomplete: "email", placeholder: "example@email.com" %>
        </div>


        <div class="flex justify-center mt-10 space-x-4">
          <%= f.submit t('.submit'), class: "bg-[#E3A83A] text-white font-medium py-2 px-6 rounded-none shadow-sm hover:bg-[#cc972f]" %>
        </div>
        
    <% end %>
  </div>
</div>