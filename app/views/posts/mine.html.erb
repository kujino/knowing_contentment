<% content_for(:title, t('.title')) %>

<div class="bg-[#F4F4F4] min-h-screen w-full">
  <div class="mx-auto px-5 md:px-0 max-w-[480px] md:max-w-7xl">

        <div class="max-w-xl mx-auto pt-10 space-y-4">
          <%= search_form_for @q, url: mine_posts_path do |f| %>
            <%= render 'shared/search_form', f: f %>
          <% end %>
    
          <% @posts.each do |post| %>
            <%= render 'shared/post_card', post: post %>
          <% end %>
        </div>
    </div>
  </div>
</div>
