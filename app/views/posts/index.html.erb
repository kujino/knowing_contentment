<% content_for(:title, t('.title')) %>

<div class="bg-[#F4F4F4] min-h-screen w-full">
  <div class="mx-auto px-5 md:px-0 max-w-[480px] md:max-w-7xl">
      <div class="max-w-xl mx-auto pt-10 pb-10">
  
        <%= search_form_for @q, url: posts_path do |f| %>
          <%= render 'shared/search_form', f: f %>
        <% end %>
        
        <% @posts.each do |post| %>
          <%= link_to post_path(post), class: "block" do %>
            <div class="pb-5">
              <div class="bg-white shadow-sm rounded-lg p-4 border border-gray-100">

                <div class="text-left text-sl font-semibold text-[#2F3A4A]">
                  <%= post.theme.title %>
                </div>

                <div class="<%= post.image.attached? ? 'mt-4' : 'mt-3' %> text-left text-sm md:text-base text-[#2F3A4A]">
                  <%= post.content %>
                </div>

                <% if post.image.attached? %>
                  <div class="flex justify-center mb-3 py-5">
                    <%= image_tag post.image.variant(resize_to_fill: [500, 300]), class: "rounded-md" %>
                  </div>
                <% end %>

                <div class="mt-3 flex justify-end items-center text-[10px] text-gray-500">
                  <% if post.is_anonymous == false %>
                    <span class="mr-2 font-medium text-gray-700">
                      <%= post.user.name %>
                    </span>
                  <% end %>
                  <span><%= l(post.created_at, format: :long) %></span>
                </div>

                <% if user_signed_in? %>
                  <div class="mt-2 flex justify-start">
                    <%= render 'posts/reaction_buttons', post: post %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
     </div>
  </div>
</div>