<div class="simple-calendar bg-white">
  <!-- ヘッダー（前月・年月・次月） -->
  <div class="flex items-center justify-between bg-[#7A8C99] px-4 py-3 border-b border-gray-300">
    <%= link_to calendar.url_for_previous_view,
          class: "text-sm text-white hover:text-gray-400" do %>
      ◀
    <% end %>

    <time class="text-base font-semibold text-white">
      <%= start_date.year %>年 <%= start_date.month %>月
    </time>

    <%= link_to calendar.url_for_next_view,
          class: "text-sm text-white hover:text-gray-400" do %>
      ▶
    <% end %>
  </div>

  <!-- カレンダー本体 -->
  <table class="w-full table-fixed border-collapse">
    <thead>
      <tr class="border-b border-gray-300">
        <% date_range.slice(0, 7).each do |day| %>
          <th class="py-2 text-gray-600 text-sm font-medium">
            <%= t('date.abbr_day_names')[day.wday] %>
          </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr class="border-b border-gray-200">
          <% week.each_with_index do |day, idx| %>
            <td class="align-top h-14 md:h-20 px-1 <%= 'border-r border-gray-200' unless idx == 6 %>">
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


